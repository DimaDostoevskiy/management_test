@model OrderEditPageModel

@{
	ViewData["Title"] = "Order Edit";
}
<div class="row">
	<div class="col-md-4 card">
		<div class="card-header h4">Edit Order</div>
		<div class="card-body">
		<form asp-action="Edit">

			<input type="hidden" asp-for="Order.Id" value="@Model.Order.Id" />
			<input type="hidden" asp-for="PreviuProviderId" value="@Model.Order.ProviderId" />

			<div class="form-group">
				<label asp-for="Order.ProviderId" class="control-label">Provider</label>
				<select asp-for="Order.ProviderId" value="@Model.Order.ProviderId" class="form-select"
					asp-items="@Model.SelectProviders">
				</select>
			</div>

			<div class="form-group">
				<label asp-for="Order.Number" class="control-label">Number</label>
				<input asp-for="Order.Number" class="form-control" value="@Model.Order.Number" />
				<span asp-validation-for="Order.Number" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="Order.Date" class="control-label">Date</label>
				<input asp-for="Order.Date" class="form-control" />
				<span asp-validation-for="Order.Date" class="text-danger"></span>
			</div>

				<div>
					<input type="submit" value="Edit" class="btn btn-success mt-3 w-100" />
					<a href="/Order/Details/@Model.Order.Id" class="btn btn-primary mt-3 w-100">Back to List</a>
				</div>

			</form>
		</div>
	</div>
</div>


@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
