@model ItemViewModel

@{
  ViewData["Title"] = "Details";
}

<div class="row">
  <h4> Order: @Model.Order.Number</h4>
</div>
<div class="row">
  <h4> Date: @Model.Order.Date</h4>
</div>
<div class="row">
  <h4> Provider: @Model.Order.ProviderName</h4>
</div>

<a asp-action="CreateItem" asp-route-id="@Model.Order.Id" class="btn btn-primary">Add item</a>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Quantity</th>
      <th scope="col">Unit</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    @for (int i = 0; i < Model.Order.Items.Length; i++)
    {
      <tr class="table-dark">
        <td>@Model.Order.Items[i].Name</td>
        <td>@Model.Order.Items[i].Quantity</td>
        <td>@Model.Order.Items[i].Unit</td>
        <td>
        </td>
      </tr>
    }
  </tbody>
</table>

<div>
  <div class="row">
    <div class="col">
      <a asp-action="Edit" asp-route-id="@Model.Order.Id" class="btn btn-primary">Edit</a>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <a asp-action="Delete" asp-route-id="@Model.Order.Id" class="btn btn-danger">Delete</a>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <a asp-action="Index" class="btn btn-primary">Back to List</a>
    </div>
  </div>
</div>