@model asu_management.mvc.ViewModels.OrderViewModel

@{
  ViewData["Title"] = "Details";
}

<h4>Order: @Model.Number</h4>
<h4>Date:  @Model.Date</h4>

<a class="btn btn-primary" asp-action="CreateItem" asp-route-id="@Model.Id">Edit</a>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Quantity</th>
      <th scope="col">Unit</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    @foreach (var order in Model.Items)
    {
      <tr class="table-dark">
        <td>@order.Name</td>
        <td>@order.Quantity</td>
        <td>@order.Unit</td>
        <td>
          <a asp-action="Edit" asp-route-id="@order.Id">Edit</a> |
          <a asp-action="Details" asp-route-id="@order.Id">Details</a> |
          <a asp-action="Delete" asp-route-id="@order.Id">Delete</a>
        </td>
      </tr>
    }
  </tbody>
</table>
<div>
  <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
  <a asp-action="Index">Back to List</a>
</div>